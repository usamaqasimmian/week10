{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 700,
    "height": 400,
    "title": "Protected Wildlife Areas",
    "data": {
      "url": "https://raw.githubusercontent.com/usamaqasimmian/FIT3179/main/no%20null%20value%20protected%20area.csv"
    },
    "params": [
      {
        "name": "GDP_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000,
          "step": 1000,
          "name": "Minimum GDP: "
        }
      },
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "labels": [
            "Show All",
            "North America",
            "South America",
            "Europe",
            "Africa",
            "Asia",
            "Oceania"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Area > 0"},
      {"filter": "datum.GDP > 0"},
      {
        "filter": "Continent_selection == null || datum.Continent == Continent_selection"
      },
      {"filter": "datum.GDP > GDP_Above"}
    ],
    "encoding": {
               "x": {
            "field": "Area",
            "type": "quantitative",
            "title": "Country Area (sq km)",
            "axis": {"tickCount": 6},
            "scale": {"type": "log", "domain": [1, 20000000]}
          },
          "y": {"field": "Protected Area (%)", "type": "quantitative"}
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["Continent"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "size": {
            "field": "GDP",
            "type": "quantitative",
            "title": "GDP per capita in US$",
            "scale": {
              "type": "threshold",
              "domain": [1000, 5000, 10000, 20000, 50000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Area", "type": "quantitative", "format": ".0f"},
            {
              "field": "Protected Area (%)",
              "type": "quantitative",
              "format": ".2f"
            },
            {
              "field": "GDP",
              "type": "quantitative",
              "title": "GDP per capita in US$",
              "format": ".0f"
            },
            {"field": "Continent", "type": "nominal"}
          ],
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          }
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {"test": "datum['Country'] == 'China' || datum['Country'] == 'India' || datum['country'] == 'Indonesia' ",
             "value": 1},
            "value": 0
          },
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "GDP", "type": "quantitative", "format": ".0f"},
            {"field": "Area", "type": "quantitative", "format": ".0f"},
            {
              "field": "Protected Area (%)",
              "type": "quantitative",
              "format": ".0f"
            },
            {"field": "Continent", "type": "nominal"}
          ]
        }
      }
    ],
    "config": {
      "background": "rgb(255,247,238)",
      "arc": {"fill": "#ab5787"},
      "area": {"fill": "#ab5787"},
      "line": {"stroke": "#ab5787"},
      "path": {"stroke": "#ab5787"},
      "rect": {"fill": "#ab5787"},
      "shape": {"stroke": "#ab5787"},
      "symbol": {"fill": "#ab5787", "size": 30},
      "axis": {
        "domainColor": "#979797",
        "domainWidth": 0.5,
        "gridWidth": 0.2,
        "labelColor": "#979797",
        "tickColor": "#979797",
        "tickWidth": 0.2,
        "titleColor": "#979797"
      },
      "axisBand": {"grid": false},
      "axisX": {"grid": true, "tickSize": 10},
      "axisY": {"domain": false, "grid": true, "tickSize": 0},
      "legend": {
        "labelFontSize": 11,
        "padding": 1,
        "symbolSize": 30,
        "symbolType": "circle"
      },
      "range": {
        "category": [
          "#ab5787",
          "#51b2e5",
          "#703c5c",
          "#168dd9",
          "#d190b6",
          "#00609f",
          "#d365ba",
          "#154866",
          "#666666",
          "#c4c4c4"
        ]
      }
    }
  }